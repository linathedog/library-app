<h2>Edit Invitation</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      {{input type="text" value=model.email class="form-control" placeholder="Contact email"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveInvitation' model}}>Save changes</button>
    </div>
  </div>
</div>
